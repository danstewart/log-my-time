<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <meta name="author" content="Dan Stewart" />
        <title>{{ page_title or 'LogMyTime' }}</title>
        <!-- From https://favicon.io/ -->
        <link rel="apple-touch-icon"
              sizes="180x180"
              href="/static/icons/apple-touch-icon.png"/>
        <link rel="icon"
              type="image/png"
              sizes="32x32"
              href="/static/icons/favicon-32x32.png"/>

        <!-- Third party assets -->
        {# djlint:off #}
        {% include "partials/assets/bootstrap.html.j2" %}
        {% include "partials/assets/flatpickr.html.j2" %}
        {# djlint:on #}

        <!-- Our CSS and js -->
        <link rel="stylesheet" href="/static/css/default.css" />
        <script type="module" defer src="/static/js/main.js"></script>
    </head>

    <body style="padding-bottom: 500px;">
        {% if FLASK_DEBUG %}<div class="debug-bar">DEBUG MODE</div>{% endif %}

        <div class="container mt-3">
            {# Header #}
            <div id="header"
                 class="d-flex flex-row justify-content-between align-items-center mb-3">
                <h1>
                    <a href="{{ '/dash' if is_logged_in else '/'}}">LogMyTime</a>
                </h1>
                <div>
                    <a title="GitHub"
                       href="https://github.com/danstewart/log-my-time"
                       class="icon me-4">
                        <i class="bi bi-github"></i>
                    </a>
                    {% if is_logged_in %}
                        <a title="Settings" href="/settings" class="icon">
                            <i class="bi me-4 bi-gear-wide-connected"></i>
                        </a>
                        <a title="Log out" class="icon me-4" href="/logout"><i class="bi bi-box-arrow-in-left"></i></a>
                    {% endif %}
                </div>
            </div>
            {# Flash messages #}
            <div aria-live="polite" aria-atomic="true">
                <div id="flash-messages" class="mt-3">
                    {% with messages = get_flashed_messages(with_categories=true) %}
                        {% if messages %}
                            {% for category, message in messages %}
                                <div class="alert alert-{{ category }}"
                                     role="alert"
                                     aria-live="assertive"
                                     aria-atomic="true"
                                     data-bs-autohide="true">
                                    <div class="d-flex">
                                        <div class="toast-body">{{ message }}</div>
                                        <button onclick="this.parentNode.parentNode.remove()"
                                                type="button"
                                                class="btn-close me-2 m-auto"
                                                data-bs-dismiss="toast"
                                                aria-label="Close">
                                        </button>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    {% endwith %}
                </div>
            </div>
            {# Page content #}
            {% block content %}
            {% endblock content %}
        </div>
    </body>
    <!-- Setting values for the JS to read -->
    {% if settings %}<span class="d-none" id="timezone">{{ settings.timezone }}</span>{% endif %}
</html>
