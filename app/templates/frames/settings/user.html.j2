        <label class="form-label">Annual Leave Entitlement</label>
        <input class="form-control"
            type="text"
            name="leaveEntitelement"
            id="leaveEntitlement"
            value="25"
            required/>
    </div>

    <button class="btn btn-primary">Save</button>
</form>
