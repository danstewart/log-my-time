<div class="d-flex justify-content-between">
    {% set bc_teams = "<a href='/settings/teams'>Teams</a>" %}
    {% set bc_team = "<a href='/settings/teams/{}'>{}</a>".format(team, team) %}

    <h3>{{ bc_teams }} / {{ bc_team }} / {{ user }}</h3>

    <div>
        <button class="btn btn-danger">Remove User</button>
    </div>
</div>

<form>
