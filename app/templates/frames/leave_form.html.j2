<section>
    <form id="leaveForm" method="post" action="/frames/leave_form/{{ row_id }}">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Date</label>
                <div class="input-group">
                    <input class="form-control flatpickr"
                           type="text"
                           name="start"
                           data-date-type="date"
                           data-set-default
                           required/>
                </div>
            </div>
            <div class="col-md-6">
                <label class="form-label">Is this a half day?</label>
                <div class="input-group">
                    <input class="form-check-input mt-2" type="checkbox" name="half-day"/>
                </div>
            </div>
            <div class="mt-3">
                <label class="form-label">Note</label>
                <textarea class="form-control" name="note" rows="5"></textarea>
            </div>
            <input type="hidden" name="csrf_token" value="{{ csrf_token() }}" />
        </div>
    </form>
    <div class="d-flex flex-row justify-content-end">
        <button id="submit" type="button" class="btn btn-primary">Save changes</button>
    </div>
</section>
